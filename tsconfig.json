{
  "files": [
    "index.ts"
  ],
  "include": [
    "./*.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "target": "es6",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": [ "node_modules/@types" ],
    "paths": {
      "*": [
        "node_modules/@types/*"
      ]
    }
  }
}
